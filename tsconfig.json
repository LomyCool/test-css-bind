{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "strict": true,
    "target": "ES2015",
    "module": "ESNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "@vue/shared"
    ]
  },
  "include": [
    "src/**/*",
    "docs/**/*",
    "test/**/*",
    "typings/**/*"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}